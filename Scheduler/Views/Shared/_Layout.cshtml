@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["title"] - Scheduler</title>

        <!-- insertion-point-jss -->
        <environment exclude="Development">
            <link rel="stylesheet" asp-href-include="~/client/styles.*.css" />
        </environment>

        <script>
            var rootPath = "@Configuration.GetSection("Scheduler")["PathRoot"]";

            window.Scheduler = {
                constants: {
                    pageIds: {
                        calendar: "calendar",
                        dashboard: "dashboard",
                        home: "home",
                        schedules: "schedules",
                    },
                },
                staticData: {
                    pageId: "@ViewData["pageId"]",
                    paths: {
                        root: rootPath,
                        calendar: rootPath + "@Configuration.GetSection("Scheduler")["PathCalendar"]",
                        dashboard: rootPath + "@Configuration.GetSection("Scheduler")["PathDashboard"]",
                        schedules: rootPath + "@Configuration.GetSection("Scheduler")["PathSchedules"]",
                    }
                },
            };
        </script>
    </head>
    <body>
        <div id="app" style="height:100%;"></div>

        @RenderBody()

        <environment include="Development">
            <script src="https://localhost:3001/bundle.js"></script>
        </environment>
        <environment exclude="Development">
            <script asp-src-include="~/client/runtime.*.js"></script>
            <script asp-src-include="~/client/vendor.*.js"></script>
            <script asp-src-include="~/client/app.*.js"></script>
        </environment>

        @RenderSection("Scripts", required: false)
    </body>
</html>
